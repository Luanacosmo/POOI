//EXERCÍCIO 1
public class Aviao {
    String fabricante, modelo;
    int qtdeAssentos;

    public void ligar(){
        System.out.println("ligar aviao " + fabricante + " " + modelo + "que possuí " + qtdeAssentos + " assentos");
    }
}
public class ExemploAviao{
    public static void main (String[] args){
        Aviao aviao1 =  new Aviao();
        aviao1.fabricante = "Boening";
        aviao1.modelo = "777";
        aviao1.qtdeAssentos = 200;
        aviao1.ligar();

        Aviao aviao2 =  new Aviao();
        aviao2.fabricante = "Boening";
        aviao2.modelo = "707";
        aviao2.qtdeAssentos = 150;
        aviao2.ligar();
    }
}
//EXERCÍCIO 2
public class Pessoa {
    String nome, telefone;

    public void exibe(){
        System.out.println("nome: " + nome + " " + "telefone: " + telefone);
    }
}
public class Dados{
    public static void main (String[] args ){
        Pessoa pessoa1 = new Pessoa();
        pessoa1.nome = "Luana";
        pessoa1.telefone = "42998607808";
        pessoa1.exibe();
    }
}
// EXERCÍCIO 3
class Universidade {
    String nome, cidade, estado;

    public void exibeDados() {
        System.out.println("Universidade: " + nome + ", Cidade: " + cidade + ", Estado: " + estado);
    }
}
class Aluno {
    String nome, curso;

    public void exibeDados() {
        System.out.println("Aluno: " + nome + ", Curso: " + curso);
    }
}
public class Teste {
    public static void main(String[] args) {
        // Criando uma instância da classe Universidade
        Universidade universidade1 = new Universidade();
        universidade1.nome = "Universidade Federal de Minas Gerais";
        universidade1.cidade = "Belo Horizonte";
        universidade1.estado = "Minas Gerais";

        // Criando uma instância da classe Aluno
        Aluno aluno1 = new Aluno();
        aluno1.nome = "João Silva";
        aluno1.curso = "Ciência da Computação";

        // Exibindo os dados
        universidade1.exibeDados();
        aluno1.exibeDados();
    }
}
   
    

